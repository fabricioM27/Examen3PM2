<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen3PM2.MainPage">

    <ScrollView>
        <StackLayout >
            <Image VerticalOptions="Start" Margin="10" x:Name="photo" WidthRequest="100" HeightRequest="200" Background="BLACK"/>
            <Entry Margin="10" Keyboard="Text" Placeholder="Indique su descripcion" x:Name="descripcion_txt"></Entry>
            <DatePicker x:Name="fechaPicker"/>
            <Button Margin="10" x:Name="btnguardar" Text="Guardar" Clicked="btnguardar_Clicked"></Button>
            <Button Margin="10" x:Name="btn_photo" Text="Capturar imagen" Clicked="btn_photo_Clicked"></Button>
            <Button Margin="10" x:Name="VerLista" Text="Lista" Clicked="VerLista_Clicked"></Button>
            <Button x:Name="btnGrabarAudio"
                Text="Grabar Audio"
                TextColor="White"
                Margin="5"
                Clicked="btnGrabarAudio_Clicked"                  
             />
            <Label x:Name="lblUrl"
       IsVisible="false"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
